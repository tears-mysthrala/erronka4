# Zabala Gailetak - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =================================
# Application Configuration
# =================================
NODE_ENV=production
PORT=3000
API_URL=http://localhost:3000

# =================================
# MongoDB Configuration
# =================================
MONGO_USER=admin
MONGO_PASSWORD=change-this-password
MONGODB_URI=mongodb://admin:change-this-password@mongodb:27017/zabala-gailetak?authSource=admin
MONGODB_AUTH_SOURCE=admin
MONGODB_POOL_SIZE=10

# =================================
# Redis Configuration
# =================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-this-redis-password

# =================================
# JWT Configuration
# =================================
JWT_SECRET=change-this-to-a-random-secret-key-at-least-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# =================================
# Security Configuration
# =================================
ALLOWED_ORIGINS=http://localhost:3001,http://localhost
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_HSTS_MAX_AGE=31536000

# =================================
# Backup Configuration
# =================================
BACKUP_DIR=/backups
RETENTION_DAYS=7

# =================================
# Email Configuration (Optional)
# =================================
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@zabala-gailetak.com
SMTP_PASSWORD=smtp-password
SMTP_FROM=noreply@zabala-gailetak.com

# =================================
# Watchtower Configuration (Optional)
# =================================
WATCHTOWER_EMAIL_FROM=watchtower@zabala-gailetak.com
WATCHTOWER_EMAIL_TO=admin@zabala-gailetak.com

# =================================
# Monitoring (Optional)
# =================================
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# =================================
# External Services (Optional)
# =================================
STRIPE_API_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
