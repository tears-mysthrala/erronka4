{
  "dashboard": {
    "id": null,
    "title": "Zabala Gailetak - Segurtasun Monitorizazioa",
    "tags": ["security", "siem", "wazuh"],
    "timezone": "Europe/Madrid",
    "schemaVersion": 36,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Alerta Kritikoak - Azken 24 orduak",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(wazuh_alerts{severity=~\"12|13|14|15\"})",
            "legendFormat": "Kritikoak"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "custom": {"displayMode": "gradient"}
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Brute Force Saiakerak",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(wazuh_alerts{rule_group=~\"authentication_failures\"}[5m])",
            "legendFormat": "Saiakerak/minuto"
          }
        ],
        "alert": {
          "name": "Brute Force Detektatua",
          "message": "5 huts egindako login saiakera minutu batean",
          "evaluator": {"params": [5], "type": "gt"},
          "operator": {"type": "and"},
          "reducer": {"type": "sum"},
          "frequency": "1m",
          "handler": 1,
          "notifications": [{"uid": "telegram-ciso"}]
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Malware Detekzioa",
        "type": "table",
        "targets": [
          {
            "expr": "wazuh_alerts{rule_group=~\"virus|trojan|malware\"}",
            "format": "table",
            "instant": true
          }
        ],
        "alert": {
          "name": "Malware Alerta",
          "message": "Malwarea detektatu da sistema batean",
          "evaluator": {"params": [0], "type": "gt"},
          "frequency": "30s",
          "severity": "critical"
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "OT Sareko Anomaliak",
        "type": "graph",
        "targets": [
          {
            "expr": "modbus_anomalies{plc=\"labeko-plc-01\"}",
            "legendFormat": "Modbus komando ezohikoak"
          },
          {
            "expr": "opc_ua_connection_errors",
            "legendFormat": "OPC-UA erroreak"
          }
        ],
        "alert": {
          "name": "OT Sare Segurtasun Alerta",
          "message": "Modbus Write Coil ezohikoa detektatu da PLC batean",
          "evaluator": {"params": [1], "type": "gt"},
          "frequency": "30s",
          "severity": "critical",
          "annotations": {
            "runbook_url": "https://wiki.zabalagailetak/runbooks/ot-incident"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Pribilegioen Igoerak",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(wazuh_alerts{rule_group=~\"privilege_escalation\"})",
            "legendFormat": "Igoerak"
          }
        ],
        "alert": {
          "name": "Pribilegioen Igoera Susmagarria",
          "message": "Erabiltzaile berri bat admin taldean gehitua",
          "evaluator": {"params": [0], "type": "gt"},
          "frequency": "1m"
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Portu Eskaneatzea",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(firewall_blocked_connections{reason=\"port_scan\"}[5m])",
            "legendFormat": "Blokeatutako eskaneatzeak"
          }
        ],
        "alert": {
          "name": "Port Scan Detektatua",
          "message": "Portu eskaneatze susmagarria detektatu da",
          "conditions": [
            {
              "evaluator": {"params": [100], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "sum"}
            }
          ],
          "frequency": "2m"
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Datu Ihesa (DLP)",
        "type": "table",
        "targets": [
          {
            "expr": "dlp_alerts{severity=\"high\"}",
            "format": "table"
          }
        ],
        "alert": {
          "name": "Datu Ihesa Posiblea",
          "message": "Email batek datu konfidentzialak ditu",
          "evaluator": {"params": [0], "type": "gt"},
          "severity": "critical"
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Intzidentziak",
          "datasource": "Wazuh",
          "expr": "wazuh_incidents",
          "tagKeys": "severity,type",
          "textFormat": "{{description}}",
          "iconColor": "red"
        }
      ]
    }
  }
}
