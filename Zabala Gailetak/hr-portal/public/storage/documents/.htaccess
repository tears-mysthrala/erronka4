# Deny all direct access to documents
# Files should only be accessed through the PHP API

Require all denied

# Alternative for older Apache versions
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>

# Disable directory browsing
Options -Indexes

# Deny access to all files
<FilesMatch ".*">
    Require all denied
</FilesMatch>
