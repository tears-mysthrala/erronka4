# Environment
APP_ENV=development
APP_DEBUG=true
APP_NAME="Zabala Gailetak HR Portal"
APP_URL=https://zabala-gailetak.infinityfreeapp.com

# Database
DB_DRIVER=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_NAME=hr_portal
DB_USER=hr_user
DB_PASSWORD=change_this_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
JWT_SECRET=change_this_secret_key_to_something_very_long_and_random
SESSION_LIFETIME=28800
CSRF_TOKEN_NAME=csrf_token
PASSWORD_PEPPER=another_random_secret_for_password_hashing

# Email (SMTP)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@zabalagailetak.com
MAIL_FROM_NAME="Zabala Gailetak HR"

# File Storage
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,jpg,jpeg,png,gif
UPLOAD_PATH=/var/www/storage/uploads

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60

# WebAuthn
WEBAUTHN_NAME="Zabala Gailetak HR"
WEBAUTHN_ID=zabalagailetak.com
WEBAUTHN_ICON=

# Logging
LOG_LEVEL=info
LOG_PATH=/var/www/logs
