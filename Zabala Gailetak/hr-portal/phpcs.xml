<?xml version="1.0"?>
<ruleset name="HR Portal Coding Standard">
    <description>Coding standard for Zabala Gailetak HR Portal</description>

    <!-- Include the PSR-12 coding standard -->
    <rule ref="PSR12"/>

    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Use colors in output -->
    <arg name="colors"/>
    
    <!-- Exclude vendor and generated files -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>
    <exclude-pattern>*/temp/*</exclude-pattern>

    <!-- Check all PHP files -->
    <file>src/</file>
    <file>tests/</file>

    <!-- Ignore Redis type warnings - extension may not be loaded in IDE -->
    <rule ref="Generic.PHP.ForbiddenFunctions">
        <exclude name="Generic.PHP.ForbiddenFunctions.Found"/>
    </rule>
</ruleset>
